<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.mcgill.ecse321.group10.tamas.MainActivity">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_tamas"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/power_is_in_your_hands"
        android:textColor="#000000"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/Welcome"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/createJob"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/roundbutton"
        android:onClick="createJobAppClicked"
        android:text="@string/apply_to_job"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp" />

    <Button
        android:id="@+id/Login"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:onClick="loginClicked"
        android:textColor="#000000"
        android:text="@string/login"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/BrowseApps"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/BrowseApps"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/createJob"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:background="@drawable/roundbutton"
        android:onClick="browseAppsClicked"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/browse_applications"
        android:textColor="#000000" />


</RelativeLayout>
